generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("PRISMA_DATABASE_URL")
}

model EnglishWord {
    id   Int    @id @default(autoincrement())
    word String @unique


    MichifWords    MichifWord[]
    RelatedWords   EnglishWord[] @relation(name: "RelatedWords")
    WordsRelatedTo EnglishWord[] @relation(name: "RelatedWords")
}

model MichifWord {
    id                     Int     @id @default(autoincrement())
    word                   String
    phonetic               String?
    image                  String?
    exampleSentenceMichif  String?
    exampleSentenceEnglish String?
    Note                   String?
    registrarId            Int?

    soundEmbedUrl String?
    soundDate     DateTime?
    soundLocation String?
    soundSpeaker  String?

    PartOfSpeech  PartOfSpeech
    Categories    Category[]
    Registrar     Registrar?   @relation(fields: [registrarId], references: [id])
    EnglishWord   EnglishWord? @relation(fields: [englishWordId], references: [id])
    englishWordId Int?
}

model Registrar {
    id         Int          @id @default(autoincrement())
    name       String
    MichifWord MichifWord[]
}

model Category {
    id          Int          @id @default(autoincrement())
    title       String       @unique
    MichifWords MichifWord[]
}

enum PartOfSpeech {
    Noun
    Pronoun
    Verb
}

enum VariantType {
    Plural
    Past
    Present
}
